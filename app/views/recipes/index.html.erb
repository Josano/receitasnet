<h1><%= pluralize( @recipes.size, 'Receita', plural: 'Receitas') %></h1>

<ul>
  <% @recipes.each do |recipe| %>
    <article>
      <header>	
        <h2><%= link_to recipe.name, recipe %></h2>
      </header>
      <p>
        <%= truncate(recipe.stuff, length: 17, separator: '') %>
      </p>
      <p>
        <%= formata_caloria(recipe) %>
      </p>
      <table>
        <tr>
          <th>Modo de Preparo:</th>	
          <td><%= recipe.prepare_mode %></td>
        </tr>
        <tr>
          <th>Custo do Prato:</th>  
          <td><%= number_to_currency(recipe.cost) %></td>
        </tr>  
      </table>
    </article>
  <% end %>
</ul>